{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./typings",
    "outDir": "./dist",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true, //typegoose for
    "emitDecoratorMetadata": true, //typegoose for
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  //Custom codes
  "rootDir": "./src",
}